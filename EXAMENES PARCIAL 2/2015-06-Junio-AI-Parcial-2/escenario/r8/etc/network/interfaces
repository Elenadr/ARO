######################################################################
# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
     hwaddress ether 00:07:e9:00:08:00
     address 35.0.0.8
     netmask 255.255.255.0

auto eth1
iface eth1 inet static
     hwaddress ether 00:07:e9:00:08:01
     address 28.0.0.8
     netmask 255.255.255.0

auto eth2
iface eth2 inet static
     hwaddress ether 00:07:e9:00:08:02
     address 32.0.0.8
     netmask 255.255.255.0

auto eth3
iface eth3 inet static
     hwaddress ether 00:07:e9:00:08:03
     address 108.0.0.8
     netmask 255.255.255.0

auto eth4
iface eth4 inet static
     hwaddress ether 00:07:e9:00:08:04
     address 104.0.0.8
     netmask 255.255.255.0

up route add -net 101.0.0.0/24 gw 28.0.0.3
