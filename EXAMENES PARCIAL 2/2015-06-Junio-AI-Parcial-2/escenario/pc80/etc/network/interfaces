######################################################################
# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
     hwaddress ether 00:07:e9:00:00:80
     address 108.0.0.80
     netmask 255.255.255.0
     gateway 108.0.0.8

