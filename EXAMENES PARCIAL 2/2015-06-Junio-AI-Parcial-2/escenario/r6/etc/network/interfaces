######################################################################
# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
     hwaddress ether 00:07:e9:00:06:00
     address 30.0.0.6
     netmask 255.255.255.0

auto eth1
iface eth1 inet static
     hwaddress ether 00:07:e9:00:06:01
     address 29.0.0.6
     netmask 255.255.255.0

auto eth2
iface eth2 inet static
     hwaddress ether 00:07:e9:00:06:02
     address 32.0.0.6
     netmask 255.255.255.0

auto eth3
iface eth3 inet static
     hwaddress ether 00:07:e9:00:06:03
     address 33.0.0.6
     netmask 255.255.255.0

up route add -net 101.0.0.0/24 gw 29.0.0.3
