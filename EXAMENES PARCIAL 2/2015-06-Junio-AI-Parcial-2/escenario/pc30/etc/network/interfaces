######################################################################
# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
     hwaddress ether 00:07:e9:00:00:30
     address 10.0.0.30
     netmask 255.255.255.0
     gateway 10.0.0.10

