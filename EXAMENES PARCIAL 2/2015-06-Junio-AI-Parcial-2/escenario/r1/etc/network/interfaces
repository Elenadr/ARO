######################################################################
# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
     hwaddress ether 00:07:e9:00:01:00
     address 21.0.0.1
     netmask 255.255.255.0

auto eth1
iface eth1 inet static
     hwaddress ether 00:07:e9:00:01:01
     address 25.0.0.1
     netmask 255.255.255.0


auto eth2
iface eth2 inet static
     hwaddress ether 00:07:e9:00:01:02
     address 24.0.0.1
     netmask 255.255.255.0

auto eth3
iface eth3 inet static
     hwaddress ether 00:07:e9:00:01:03
     address 22.0.0.1
     netmask 255.255.255.0

auto eth4
iface eth4 inet static
     hwaddress ether 00:07:e9:00:01:04
     address 101.0.0.1
     netmask 255.255.255.0

up route add -net 104.0.0.0/24 gw 24.0.0.4
up route add -net 35.0.0.0/24 gw 25.0.0.3
up route add -net 108.0.0.0/24 gw 25.0.0.3

