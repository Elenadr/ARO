######################################################################
# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
     hwaddress ether 00:07:e9:00:02:00
     address 21.0.0.2
     netmask 255.255.255.0

auto eth1
iface eth1 inet static
     hwaddress ether 00:07:e9:00:02:01
     address 102.0.0.2
     netmask 255.255.255.0

auto eth2
iface eth2 inet static
     hwaddress ether 00:07:e9:00:02:02
     address 31.0.0.2
     netmask 255.255.255.0

auto eth3
iface eth3 inet static
     hwaddress ether 00:07:e9:00:02:03
     address 30.0.0.2
     netmask 255.255.255.0

auto eth4
iface eth4 inet static
     hwaddress ether 00:07:e9:00:02:04
     address 27.0.0.2
     netmask 255.255.255.0

up route add -net 108.0.0.0/24 gw 21.0.0.1
up route add -net 101.0.0.0/24 gw 31.0.0.7




